{
	"info": {
		"_postman_id": "pizza-wale-backend",
		"name": "Pizza Wale API",
		"description": "Postman collection for Pizza Wale Backend API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Shop Login",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/auth/shop/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"auth",
								"shop",
								"login"
							]
						}
					},
					"response": []
				},
				{
					"name": "Send OTP",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phone\": \"+1234567890\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/auth/otp/send",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"auth",
								"otp",
								"send"
							]
						}
					},
					"response": []
				},
				{
					"name": "Verify OTP",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phone\": \"+1234567890\",\n    \"otp\": \"123456\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/auth/otp/verify",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"auth",
								"otp",
								"verify"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Shops",
			"item": [
				{
					"name": "Get Menu",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/shops/{{shopId}}/menu",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"shops",
								"{{shopId}}",
								"menu"
							]
						}
					},
					"response": []
				},
				{
					"name": "Create Product",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{shopToken}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"New Pizza\",\n    \"description\": \"Delicious new pizza\",\n    \"basePrice\": 399,\n    \"categoryId\": \"{{categoryId}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/shops/{{shopId}}/product",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"shops",
								"{{shopId}}",
								"product"
							]
						}
					},
					"response": []
				},
				{
					"name": "Update Product",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{shopToken}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"basePrice\": 450,\n    \"isAvailable\": false\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/shops/{{shopId}}/product/{{productId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"shops",
								"{{shopId}}",
								"product",
								"{{productId}}"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Orders",
			"item": [
				{
					"name": "Create Order",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{userToken}}",
								"type": "text"
							},
							{
								"key": "Idempotency-Key",
								"value": "{{$guid}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"shopId\": \"{{shopId}}\",\n    \"items\": [\n        {\n            \"productId\": \"{{productId}}\",\n            \"quantity\": 1,\n            \"options\": []\n        }\n    ]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/orders",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"orders"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Order",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/orders/{{orderId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"orders",
								"{{orderId}}"
							]
						}
					},
					"response": []
				},
				{
					"name": "Update Order Status",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{shopToken}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"status\": \"CONFIRMED\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/orders/{{orderId}}/status",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"orders",
								"{{orderId}}",
								"status"
							]
						}
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "shopId",
			"value": "REPLACE_WITH_SHOP_ID",
			"type": "string"
		},
		{
			"key": "productId",
			"value": "REPLACE_WITH_PRODUCT_ID",
			"type": "string"
		},
		{
			"key": "categoryId",
			"value": "REPLACE_WITH_CATEGORY_ID",
			"type": "string"
		},
		{
			"key": "orderId",
			"value": "REPLACE_WITH_ORDER_ID",
			"type": "string"
		},
		{
			"key": "shopToken",
			"value": "REPLACE_WITH_SHOP_JWT",
			"type": "string"
		},
		{
			"key": "userToken",
			"value": "REPLACE_WITH_USER_JWT",
			"type": "string"
		}
	]
}
